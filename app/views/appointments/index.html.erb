<div class="container my-3">
  <h1 class="header-bold">My Appointments</h1>
    <% @appointments.each do |app| %>
    <div class="card-product">
      <% if app.treatment.photo.attached? %>
        <%= cl_image_tag app.treatment.photo.key %>
      <% else %>
        <%= image_tag('default_session.jpg') %>
      <% end %>
      <div class="card-product-infos">
        <h2><%= app.treatment.name %></h2>
        <p>with: <%= app.treatment.user.first_name %> <%= app.treatment.user.last_name %></p>
        <% if app.timeslot.nil? %>
          <p>Status: <%= app.status %></p>
        <% else %>
          <p>Time: <%= app.timeslot.strftime("%a, %e.%m.%Y, %H:%M") %></p>
        <% end %>
        <p>Address: <%= app.treatment.address %></p>
        <p><i>Price: <%= app.treatment.price.to_i %>â‚¬ / <%= app.treatment.duration %>min</i></p>
      </div>
    </div>
    <% end %>

  <%= link_to("< back to home", root_path, class: "btn btn-outline-dark mt-3") %>
</div>
